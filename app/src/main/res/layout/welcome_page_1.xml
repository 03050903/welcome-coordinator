<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/page1">

    <LinearLayout
        android:id="@+id/rocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        app:view_behavior=".AnimationLaunch">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:background="@color/rocket"
            android:src="@drawable/ic_airplanemode_150dp"
            android:paddingTop="16dp"
            android:clipToPadding="false">

            <View
                android:id="@+id/avatar4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="135dp"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_4_background" />

            <View
                android:id="@+id/avatar3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_3_background" />

            <View
                android:id="@+id/avatar2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_2_background" />

            <View
                android:id="@+id/avatar1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_1_background" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rocket"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:text="Get more done faster"/>

</com.redbooth.WelcomePageLayout>
