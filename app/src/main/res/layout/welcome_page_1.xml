<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/page1">

    <LinearLayout
        android:id="@+id/rocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        app:view_behavior=".AnimationLaunch">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:background="@color/rocket"
            android:paddingTop="16dp"
            android:clipToPadding="false">

            <View
                android:id="@+id/avatar4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="135dp"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_4_background" />

            <View
                android:id="@+id/avatar3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_3_background" />

            <View
                android:id="@+id/avatar2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_2_background" />

            <View
                android:id="@+id/avatar1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:scaleX="0"
                android:scaleY="0"
                android:background="@drawable/avatar_1_background" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        style="@style/text_title"
        android:id="@+id/title"
        android:layout_above="@+id/subtitle"
        android:text="Get more done faster"/>

    <TextView
        style="@style/text_subtitle"
        android:id="@+id/subtitle"
        android:layout_alignParentBottom="true"
        android:text="Easily organize projects \nand delegate work."/>

</com.redbooth.WelcomePageLayout>
