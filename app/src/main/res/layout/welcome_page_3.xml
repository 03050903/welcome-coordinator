<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/page3">

    <View
        android:id="@+id/android_destiny"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:background="@drawable/destiny"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/android_destiny">

        <View
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"/>

    </FrameLayout>

    <TextView
        style="@style/text_title"
        android:id="@+id/title"
        android:layout_above="@+id/subtitle"
        android:text="In sync and on track"
        app:view_behavior=".ParallaxTitleBehaviour" />

    <TextView
        style="@style/text_subtitle"
        android:id="@+id/subtitle"
        android:layout_alignParentBottom="true"
        android:text="Visualize progress and notify\nteam members of important\nupdates."
        app:view_behavior=".ParallaxSubtitleBehaviour" />

</com.redbooth.WelcomePageLayout>
